<div class="well sidebar-nav">
  <h3><%= link_to 'Fábricas', plants_path, :title => 'Voltar' %></h3>
  <hr>
  <% if params[:action] == 'new' || params[:action] == 'edit'  %>
    <p><%= link_to 'Voltar', plants_path, :class => 'btn btn-default' %></p>
    <p><%= link_to 'Apagar Fábrica', @plant, method: :delete, data: { confirm: 'Tem a certeza?' }, :class => 'btn btn-danger' %></p>
  <% else %>
  <p><%= link_to 'Nova Fábrica', new_plant_path, :class => 'btn btn-primary' %></p>
  <% end %>
</div>