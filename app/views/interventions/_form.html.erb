<%= form_for [@equipment, @intervention] do |f| %>
  <% if @intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% @intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Data:' %><br>
    <%= f.date_select :day %>
  </div>
  <div class="field">
    <%= f.label 'Equipamento:' %><br>
    <%= collection_select(:intervention, :equipment_id, Equipment.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label 'Horas do equipamento:' %><br>
    <%= f.number_field :eq_hours %>
  </div>
  <div class="field">
    <%= f.label 'Reparação?' %><br>
    <%= f.check_box :repair %>
  </div>
  <div class="field">
    <%= f.label 'Manutenção preventiva?' %><br>
    <%= f.check_box :preventive %>
  </div>
  <div class="field">
    <%= f.label 'Descrição:' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label 'Peças mudadas:' %><br>
    <%= f.text_area :changed_parts %>
  </div>
  <div class="field">
    <%= f.label 'Pessoa / empresa que interviu:' %><br>
    <%= f.text_field :maintainer %>
  </div>
  <div class="field">
    <%= f.label 'Número de tarefa / obra:' %><br>
    <%= f.text_field :task_num %>
  </div>
  <div class="field">
    <%= f.label 'Número de orçamento:' %><br>
    <%= f.text_field :estimate_num %>
  </div>
  <div class="field">
    <%= f.label 'Número de pedido de compra:' %><br>
    <%= f.text_field :purchase_num %>
  </div>
  <div class="field">
    <%= f.label 'Custo em peças / material:' %><br>
    <%= f.text_field :parts_cost %>
  </div>
  <div class="field">
    <%= f.label 'Custo de mão-de-obra e deslocações:' %><br>
    <%= f.text_field :labor_cost %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
