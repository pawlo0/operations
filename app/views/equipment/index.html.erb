
<div class="row">
  <div class = "span9">

<h1>Lista de equipamentos</h1>

<%= search_form_for @search, :html => { :class => 'well form-inline'} do |f| %>
<div class="form-group">
  <div class ="span3">
    <%= f.text_field :num_id_eq, :class => 'form-control input-small', :placeholder => 'Nº Equip'%>
    <%= f.submit "Filtrar", :class => 'btn btn-default' %>
  </div>
  <div class ="span4">
    <%= f.text_field :name_or_serial_or_assigned_to_or_location_or_function_or_obs_or_maintenance_contact_cont, :class => 'form-control', :placeholder => 'Procurar'%> 
    <%= f.submit "Buscar", :class => 'btn btn-default' %>    
  </div>
  <div class ="span1">
        <%= button_to 'Limpar', equipment_index_path, :class => 'btn btn-default' if params[:q] %>
  </div>
</div>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sort_link @search, :num_id, "Número" %></th>
      <th><%= sort_link @search, :name, "Equipamento" %></th>
      <th><%= sort_link @search, :manufacturer, "Marca" %></th>
      <th><%= sort_link @search, :model, "Modelo" %></th>
      <!-- <th>Serial</th> -->
      <!-- <th>Assigned to</th> -->
      <!-- <th>Location</th> -->
      <!-- <th>Function</th> -->
      <!-- <th>Manuf date</th> -->
      <!-- <th>Buy date</th> -->
      <!-- <th>Obs</th> -->
      <!-- <th>Maintenance period</th> -->
      <!-- <th>Maintenance contact</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><p class="text-center"><%= link_to equipment.num_id, equipment %></p></td>
        <td><%= link_to equipment.name, equipment %></td>
        <td><%= equipment.manufacturer %></td>
        <td><%= equipment.model %></td>
        <!-- <td><%= equipment.serial %></td> -->
        <!-- <td><%= equipment.assigned_to %></td> -->
        <!-- <td><%= equipment.location %></td> -->
        <!-- <td><%= equipment.function %></td> -->
        <!-- <td><%= equipment.manuf_date %></td> -->
        <!-- <td><%= equipment.buy_date %></td> -->
        <!-- <td><%= equipment.obs %></td> -->
        <!-- <td><%= equipment.maintenance_period %></td> -->
        <!-- <td><%= equipment.maintenance_contact %></td> -->
        <!-- <td><%= link_to 'Show', equipment %></td> -->
        <td><%= link_to 'Editar', edit_equipment_path(equipment), :class => 'btn btn-default' %></td>
        <!-- <td><%= link_to 'Apagar', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

  </div><!--/span-->

  <div class="span3">
    <div class="well sidebar-nav">
        <h3>Equipamentos</h3>
        <hr>
        <%= link_to 'Novo Equipamento', new_equipment_path, :class => 'btn btn-primary' %>
        <hr>
        <%= link_to 'Plano Manutenção', maintasks_path, :class => 'btn btn-primary' %>
    </div><!--/.well -->
  </div><!--/span-->

</div><!-- row -->
<br>

