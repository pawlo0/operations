<h1>Listing equipment</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Serial</th>
      <th>Assigned to</th>
      <th>Location</th>
      <th>Function</th>
      <th>Manuf date</th>
      <th>Buy date</th>
      <th>Obs</th>
      <th>Maintenance period</th>
      <th>Maintenance contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.num_id %></td>
        <td><%= equipment.name %></td>
        <td><%= equipment.manufacturer %></td>
        <td><%= equipment.model %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.assigned_to %></td>
        <td><%= equipment.location %></td>
        <td><%= equipment.function %></td>
        <td><%= equipment.manuf_date %></td>
        <td><%= equipment.buy_date %></td>
        <td><%= equipment.obs %></td>
        <td><%= equipment.maintenance_period %></td>
        <td><%= equipment.maintenance_contact %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

