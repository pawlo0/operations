<div class = "col-sm-9">

<h2>Tipos de intervenção</h2>

<div class="col-sm-6">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intervention_types.each do |intervention_type| %>
      <tr data-link="<%= intervention_type_path(intervention_type) %>">
        <td><%= link_to intervention_type.name, intervention_type %></td>
        <td><%= link_to 'Edit', edit_intervention_type_path(intervention_type), :class => 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /col-sm-9 -->

<div class="col-sm-3">
  <%= render 'side' %>
</div>
<br>
