<% if params[:action] == 'index' %>
  <h3><%= link_to 'Intervenções', equipment_index_path, :title => 'Voltar' %></h3>
<% else %>
  <h3><%= link_to 'Intervenções', equipment_path(params[:equipment_id]), :title => 'Voltar' %></h3>
<% end %>

<div class="well sidebar-nav">
  <% if  params[:action] == 'show'%>
    <p><%= link_to 'Editar intervenção', edit_equipment_intervention_path(@equipment, @intervention), :class => 'btn btn-default' %></p>
    <p><%= link_to 'Nova intervenção', new_equipment_intervention_path(@equipment), :class => 'btn btn-primary' %></p>
    <p> <%= link_to 'Apagar Intervenção', @intervention, method: :delete, data: { confirm: 'Tem a certeza?' }, :class => 'btn btn-danger' %></p>
    <hr>
  <% else %>
    <p><%= link_to 'Voltar', :back, :class => 'btn btn-default' %></p>
  <% end %>
</div>