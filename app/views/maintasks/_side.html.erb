<h2><%= link_to 'Manutenções', maintasks_path %></h2>

<div class="well sidebar-nav">

  <% if params[:action] == 'new' %>
    <%= link_to 'Voltar', equipment_path(@equipment), :class => 'btn btn-default' %>
  <% elsif params[:action] == 'index' %>
    <%= link_to 'Equipamentos', equipment_index_path, :class => 'btn btn-default' %>
    <hr>
    <%= link_to 'Imprimir', "", :class => 'btn btn-default' %>
  <% else %>
    <%= link_to 'Editar Tarefa', edit_equipment_maintask_path(@maintask.equipment_id, @maintask), :class => 'btn btn-default' %>
    <%= link_to 'Nova Tarefa', new_equipment_maintask_path(@maintask.equipment_id), :class => 'btn btn-primary' %>
    <%= link_to 'Apagar Tarefa', @maintask, method: :delete, data: { confirm: 'Tem a certeza?' }, :class => 'btn btn-danger' %>
    <hr>
    <%= link_to 'Registar como Intervenção', new_equipment_intervention_path(params[:equipment_id], 
      :period => @maintask.period, 
      :unit => @maintask.unit, 
      :parts => @maintask.parts), 
      :class => 'btn btn-default' %><p>
    <hr>
  <% end %>
</div>